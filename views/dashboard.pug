extends layout

block content
  include partials/nav3

  aside
    img(src=`${profileImage}` width="50px")
    h3 #{name}
    p #{about}
  main
    h4 Latest Posts
    for post in posts
      div.item
        a(href=`/@${post.author}/${post.permlink}`): img.item__image(src=`https://steemitimages.com/520x520/${post.img}`)
        div.item__author
          a(href=`/@${post.author}/${post.permlink}`): h2 #{post.title}
          a(href=`/@${post.author}`): span @#{post.author}
        if logged
          div.postControls
            button.vote(onclick=`window.location = '/post/vote/@${post.author}/${post.permlink}'`) Vote
            button.comment(onclick=`window.location = '/post/comment/@${post.author}/${post.permlink}'`) Comment

  script(src='/js/showdown.min.js')
